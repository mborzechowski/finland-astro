---
const carDetails = {
  image: '/car-image.webp',
  brand: 'Toyota',
  color: 'Red',
  fuelConsumption: '7L/100km',
};

const drivers = Array(6).fill({});
---
<div class="container mx-auto px-4 sm:px-6 lg:px-8 flex flex-wrap lg:flex-nowrap items-center gap-12 py-8 bg-white shadow-md rounded-lg">
  
  <div class="w-full lg:w-1/3 flex justify-center">
    <img src={carDetails.image} alt="Car" class="rounded-lg shadow-lg object-cover max-w-full" />
  </div>

 
  <div class="w-full lg:w-1/3">
    <h2 class="text-2xl font-semibold mb-6 text-gray-800">Car Details</h2>
    <ul class="space-y-4">
      <li class="text-lg">
        <strong class="font-medium text-gray-700">Brand:</strong>
        <span class="text-gray-600">{carDetails.brand}</span>
      </li>
      <li class="text-lg">
        <strong class="font-medium text-gray-700">Color:</strong>
        <span class="text-gray-600">{carDetails.color}</span>
      </li>
      <li class="text-lg">
        <strong class="font-medium text-gray-700">Fuel Consumption:</strong>
        <span class="text-gray-600">{carDetails.fuelConsumption}</span>
      </li>
    </ul>
  </div>

 
  <div class="w-full lg:w-1/3">
    <h2 class="text-2xl font-semibold mb-6 text-gray-800 text-center">Drivers</h2>
    <div class="grid grid-cols-2 gap-3">
      {drivers.map((_, index) => (
        <button
          class="flex flex-col items-center justify-center border-2 border-dashed border-gray-300 rounded-md aspect-square w-44 text-gray-500 hover:border-gray-500 hover:bg-gray-50 transition focus:outline-none"
        >
          <span class="text-2xl font-bold">+</span>
          <span class="mt-1 text-sm font-medium">Add Driver</span>
        </button>
      ))}
    </div>
  </div>
</div>
